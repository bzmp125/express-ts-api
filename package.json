{
  "name": "auth",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "precommit": "lint-staged",
    "start": "node dist/server.js",
    "pm2": "pm2 start dist/server.js -i max --name auth",
    "dev": "nodemon  dist/server.js",
    "build-watch": "npm run build && npm-run-all -p watch start-dev",
    "build": "npm run build-ts && npm run lint-ts",
    "build-ts": "tsc",
    "lint-ts": "tslint -c tslint.json -p tsconfig.lint.json -t stylish --force",
    "watch": "tsc -w",
    "security-check": "nsp check",
    "test": "jest",
    "docker-debug": "docker-compose up"
  },
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.17.0",
    "@types/bull": "^3.5.1",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.0",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/mongoose": "^5.3.2",
    "@types/redis": "^2.8.10",
    "axios": "^0.18.0",
    "bcrypt": "^3.0.2",
    "body-parser": "^1.18.3",
    "bull": "^3.5.2",
    "compression": "^1.7.1",
    "cors": "^2.8.5",
    "debug": "^3.1.0",
    "dotenv": "^6.1.0",
    "express": "~4.15.5",
    "helmet": "^3.9.0",
    "jsonwebtoken": "^8.4.0",
    "mongoose": "^5.3.14",
    "rabbot": "^2.1.0",
    "redis": "^2.8.0",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/compression": "^0.0.35",
    "@types/debug": "^0.0.30",
    "@types/express": "^4.0.39",
    "@types/helmet": "^0.0.37",
    "@types/jest": "^21.1.5",
    "@types/node": "^8.0.49",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^4.3.0",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.1",
    "nsp": "^3.1.0",
    "prettier": "^1.7.4",
    "ts-jest": "^21.1.4",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.6.0",
    "tslint-immutable": "^4.4.0",
    "typescript": "^2.6.1"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/<rootDir>/src/.*|(\\.|/)spec)\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,ts,tsx,css,scss}": [
      "prettier --write",
      "git add"
    ]
  }
}
